        function recompute() {
            var trans_type = '{{ transaction_object.getTransactionType|default('') }}';
            var selected_refund_total = 0;
            var items_to_refund = 0;
            $('.refund_issued:checkbox:checked').each(function () {
                var row = $(this).closest('.existing_product_row');
                var srp = 0;

                if (trans_type == 'per') {
                    srp = row.find('.existing_adjusted_price');
                } else {
                    srp = row.find('.existing_srp');
                }

                srp = srp.val();
                items_to_refund++;
                selected_refund_total += parseFloat(srp);
            });

            var bulk_option = $('#bulk_opt_sel').val();
            var bulk_amt = $('#bulk_opt_amt').val();
            if (bulk_option != 'none') {
                if (bulk_option == 'bdiscamt') {
                    selected_refund_total = selected_refund_total - parseFloat(bulk_amt);
                } else if (bulk_option == 'bdisc') {
                    selected_refund_total = selected_refund_total - (selected_refund_total * (bulk_amt/100));
                } else if (bulk_option == 'bamt') {
                    selected_refund_total = bulk_amt; //not sure
                } else {
                    selected_refund_total = 0;
                }
            }

            //count number of items
            var rowCount = $('#refund_new_cart_table tr').length - 1;
            $('#lbl_refund_amount').text(addCommas(parseFloat(selected_refund_total)));
            $('#float_trans_refund_amount').val(selected_refund_total);
            $('#selected_items_total').val(selected_refund_total);
            computeBalance();
        }




        $(document).ready(function() {


            var restrict = "{{restrict|default('false')}}";
            if (restrict == 'true') {
                swal({
                        title: "Cannot load transaction!",
                        text: "The transaction you are trying to access is not valid for reloading",
                        type: "error",
                        confirmButtonColor: "green",
                        confirmButtonText: "Okay",
                    },
                    function(){
                        location.replace('/pos');

                    });
            } else if (restrict == 'expired') {
                swal({
                        title: "Cannot load transaction!",
                        text: "The transaction you are trying to access exceeded the allowed days to refund",
                        type: "error",
                        confirmButtonColor: "green",
                        confirmButtonText: "Okay",
                    },
                    function(){
                        location.replace('/pos');

                    });
            } else if (restrict == 'false') {
                $('#refundModal').modal('show');
            }

            $(document).on("click", ".closeAuthModal", function (e) {
                swal('Failed to authenticate refund. Redirecting to normal POS','','error');
                location.replace('/pos');
            });


            $(document).on("click", ".select_all_return", function (e) {
                $('.existing_product').find(':checkbox').each(function(){
                    $(this).closest('span').addClass('checked');
                    $(this).attr('checked','checked');
                });

                recompute();
            });

            $(document).on("click", ".auth_refund_btn", function (e) {
                $('#refundModal').modal('hide');
            });


            $(document).on("click", ".auth_refund_btn", function (e) {
                var code = $('#refund_code').val();
                var entered_code = $('#cform-refund_code').val();
                $('#cform-refund_code').val('');

                if (code === entered_code) {
                    $('#refundModal').modal('hide');
                    swal('Success!','Authentication passed','success');
                } else {
                    swal({
                            title: "Error!",
                            text: "Incorrect authentication code",
                            type: "error",
                            confirmButtonColor: "green",
                            confirmButtonText: "Retry",
                        },
                        function(){
                            $('#refundModal').modal('show');
                        });
                }

            });

            $(document).on("click", ".unselect_all_return", function (e) {
                $('.existing_product').find(':checkbox').each(function(){
                    $(this).closest('span').removeClass('checked');
                    $(this).removeAttr('checked');
                });

                recompute();
            });


            // compute existing cart
            $(document).on("click", ".refund_issued", function (e) {
                recompute();
            });
        });
