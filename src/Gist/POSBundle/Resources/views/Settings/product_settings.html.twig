<div class="row">
    <div class="col-12">
        <div class="d-inline-block">
            <a href="javascript:void(0)" class="btn btn-success btn-v1 mr-3 mt-3 mb-3 sync_products" data-toggle="modal">Update Products</a>
        </div>
    </div>
</div>
<div class="table-responsive table-v1">
    <table id="table--sync_products" class="table table-bordered" data-data-table="true" style="width:100%" data-page-length="10">
        <thead>
        <tr>
            <th width="10%">ID</th>
            <th width="20%">Brand</th>
            <th width="10%">Item Code</th>
            <th width="10%">Bar Code</th>
            <th width="50%">Description</th>
        </tr>
        </thead>
        <tbody>
        {% for p in products %}
            <tr>
                <td><p>{{p.getID}}</p></td>
                <td><p>{{p.getBrand}}</p></td>
                <td><p>{{p.getItemCode}}</p></td>
                <td><p>{{p.getBarCode}}</p></td>
                <td><p>{{p.getName}}</p></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>