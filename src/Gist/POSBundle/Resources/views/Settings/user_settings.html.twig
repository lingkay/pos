<div class="row">
    <div class="col-12">
        <div class="d-inline-block">
            <a href="javascript:void(0)" class="btn btn-success btn-v1 mr-3 mt-3 mb-3 sync_users" data-toggle="modal">Update Users</a>
        </div>
    </div>
</div>
<div class="table-responsive table-v1">
    <table id="table--sync_users" class="table table-bordered" data-data-table="true" style="width:100%" data-page-length="10">
        <thead>
        <tr>
            <th width="10%">ID</th>
            <th width="10%">Username</th>
            <th width="30%">Last Name</th>
            <th width="30%">First Name</th>
            <th width="10%">Department</th>
            <th width="10%">Position</th>
        </tr>
        </thead>
        <tbody>
        {% for u in users %}
            <tr>
                <td><p>{{u.getERPID}}</p></td>
                <td><p>{{u.getUsername}}</p></td>
                <td><p>{{u.getLastName}}</p></td>
                <td><p>{{u.getFirstName}}</p></td>
                <td><p>{{u.getDepartment}}</p></td>
                <td><p>{{u.getPosition}}</p></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>